<?xml version="1.0" encoding="UTF-8"?>
<configuration>


    <logger name="fr.hardis.mybatis" level="DEBUG"/>


    <logger name="fr.hardis.mybatis.mapper" level="DEBUG"/>

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss:SSS} %5p %t %c:%L - %m%n
            </pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="Console" />
    </root>


</configuration>
